#!/bin/bash 

tmp=/tmp/$$
scr=$(basename $0)

ERROR_CHECK(){
	[ "$(tr -d '0 ' <<< ${PIPESTATUS[@]} )" = "" ] && return
	rm -f $tmp-*
	echo "$scr" "$1"
	exit 1
}

#########################################
# TEST1: cat
#########################################
cat << FIN > $tmp-in
a
b
c
FIN

cat << FIN > $tmp-out
a
b
c
FIN

cat << FIN > ./simple_command.glue
/bin/cat $tmp-in
FIN

../main ./simple_command.glue > $tmp-out
ERROR_CHECK "TEST1.1 error"

diff $tmp-in $tmp-out
ERROR_CHECK "TEST1.2 error"


#########################################
# TEST2: invalid character in the command name
#########################################
../main ./invalid_command_name.glue > /dev/null
[ "$?" = 1 ]
ERROR_CHECK "TEST2 error"

#########################################
# TEST3: non-existent command
#########################################
../main ./non_existent_command.glue > /dev/null
[ "$?" != 0 ]
ERROR_CHECK "TEST3 error"

#########################################
# TEST4: execution of two commands 
#########################################
[ "$(../main ./two_coms.glue | wc -l | tr -d ' ')" = 2 ] 
ERROR_CHECK "TEST4 error"

rm -f $tmp-*
